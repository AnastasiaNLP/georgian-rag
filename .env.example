# Georgian RAG API - Environment Variables Template
# Copy this file to .env and fill in your actual value

# Qdrant
QDRANT_URL=https://your-cluster.eu-central-1-0.aws.cloud.qdrant.io:6333
QDRANT_API_KEY=your_qdrant_api_key_here
COLLECTION_NAME=georgian_attraction

# Cloudinary (Image Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# Claude API (Required)
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# Redis/Caching (Upstash)
UPSTASH_REDIS_URL=https://your-redis-url.upstash.io
UPSTASH_REDIS_TOKEN=your_upstash_token_here


# Google Translate (Optional)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_key

# SerpAPI (Optional - for web search)
SERPAPI_API_KEY=your_serpapi_key


# Unsplash (Optional - for enrichment)
UNSPLASH_ACCESS_KEY=your_unsplash_access_key
UNSPLASH_SECRET_KEY=your_unsplash_secret_key
UNSPLASH_URL=https://api.unsplash.com


# LangSmith (Optional - for tracing)
LANGSMITH_API_KEY=your_langsmith_api_key
LANGCHAIN_API_KEY_TRACING=your_langchain_tracing_key
LANGSMITH_PROJECT=RAG_georgian_attractions


# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
LLM_MODEL=claude-haiku-4-20250124
VECTOR_SIZE=384


# Logging
LOG_LEVEL=INFO


# Groq API (Required for LLM)
GROQ_API_KEY=your_groq_api_key_here

# Telegram Alerts (Optional)
TELEGRAM_CHAT_ID=your_telegram_chat_id
TELEGRAM_BOT_TOKEN=your_telegram_bot_token


# PostgreSQL Database
POSTGRES_URL=postgresql://raguser:ragpassword@localhost:5432/georgian_rag
POSTGRES_PASSWORD=ragpassword
ENABLE_POSTGRES_LOGGING=true

# Monitoring
ENABLE_PROMETHEUS=true

# API Configuration
API_PORT=8000
HOST=0.0.0.0

# Docker Compose Ports (Optional - defaults shown)
# QDRANT_PORT=6333
# QDRANT_GRPC_PORT=6334
# POSTGRES_PORT=5432
# PROMETHEUS_PORT=9090
# ALERTMANAGER_PORT=9093
# GRAFANA_PORT=3000
# GRAFANA_USER=admin
# GRAFANA_PASSWORD=admin